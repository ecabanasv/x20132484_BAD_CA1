<!DOCTYPE html>
<html>

<head>
  <% include partials/header %>
</head>

<body>
  <% include partials/menu %>
    <div class="container-fluid bg-3">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item"><a href="/list-entries">Diary entries</a></li>
          <li class="breadcrumb-item active" aria-current="page">Edit entry</li>
        </ol>
      </nav>
      <h3 class="text-center">
        <%= page %>
      </h3>
      <br>
      <div class="row justify-content-md-center">
        <div class="col col-lg-4">
          <form class="row g-3" action="/edit" method="post">
            <div class="form-group col-md-10">
              <label for="inputTitle">Define your day with a short title:</label>
              <input type="text" class="form-control" name="inputTitle" id="inputTitle" placeholder="Title"
                minlength="10" maxlength="20" value="<%= decodeURIComponent(entry_title) %>" required>
              <input id="address" type="hidden" name="currentAddress">
              <input type="hidden" name="entry_id" value="<%= entry_id %>">
            </div>
            <br>
            <div class="form-group col-md-10">
              <label for="inputContent">Shortly describe how your day was:</label>
              <textarea type="textbox" class="form-control" name="inputContent" id="inputContent"
                placeholder="Content..." rows="4" minlength="23" maxlength="140"
                required><%= decodeURIComponent(entry_content) %></textarea>
            </div>
            <br>
            <div class="form-group col-md-10">
              <label for="radioScore">Rate it:</label>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="radioScore" id="scoreRadio1" value="1" required>
                <label class="form-check-label" for="scoreRadio1">1</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="radioScore" id="scoreRadio2" value="2" required>
                <label class="form-check-label" for="scoreRadio2">2</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="radioScore" id="scoreRadio3" value="3" required>
                <label class="form-check-label" for="scoreRadio3">3</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="radioScore" id="scoreRadio4" value="4" required>
                <label class="form-check-label" for="scoreRadio4">4</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="radioScore" id="scoreRadio5" value="5" required>
                <label class="form-check-label" for="scoreRadio5">5</label>
              </div>
              <br>
              <br>
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Send</button>
              </div>
            </div>
          </form>
        </div>
        <div class="col col-lg-3 d-none d-md-block">
          <img src="images/diary.png" class="img-fluid" style="width: 200px;">
        </div>
      </div>

    </div>
    <% include partials/footer %>
</body>
<% include partials/scripts %>

</html>